FROM centos7

LABEL description="Container in which to build el7 applications"

ENV TZ=America/Glace_Bay
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

RUN yum install -y gcc rpm-build rpm-devel rpmlint make python bash coreutils diffutils patch rpmdevtools

RUN echo %_topdir %(echo $HOME)/rpmbuild > /root/.rpmmacros
RUN echo %_tmppath %{_topdir}/tmp >> /root/.rpmmacros

RUN mkdir -p /root/rpmbuild/{BUILD,BUILDROOT,RPMS,SOURCES,SPECS,SRPMS,tmp}
